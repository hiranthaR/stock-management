<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="50.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hirantha.controllers.admin.items.ItemRowController">
    <children>
        <AnchorPane fx:id="itemRow" styleClass="item-row-layout" stylesheets="@../../../css/admin/dashboard/items/item_row.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <ImageView fx:id="imgPhoto" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../icons/bolt.png" />
                            </image>
                        </ImageView>
                        <VBox alignment="CENTER_LEFT" prefWidth="188.0">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                            <children>
                                <Label fx:id="tvName" text="Item name">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="tvCategory" text="item category" textFill="#7c7c7c">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets left="5.0" />
                                    </VBox.margin>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" prefWidth="55.0">
                            <children>
                                <Label fx:id="tvId" text="0000">
                           <font>
                              <Font size="10.0" />
                           </font></Label>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                </HBox>
            </children>
         <padding>
            <Insets right="5.0" />
         </padding>
        </AnchorPane>
    </children>
</AnchorPane>
